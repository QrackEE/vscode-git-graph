{
    "version": "2.0.0",
    "presentation": {
        "reveal": "always",
        "focus": false,
        "echo": true,
        "showReuseMessage": false,
        "panel": "shared"
    },
    "tasks": [
        {
            "label": "webpack-dev",
            "type": "npm",
            "script": "dev",
            "isBackground": true,
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": {
                            "regexp": "webpack --progress"
                        },
                        "endsPattern": {
                            "regexp": "compiled successfully"
                        }
                    }
                }
            ]
        }
    ]
}